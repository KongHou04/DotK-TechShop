@model DotK_TechShop.Models.Db.Order

@{
    Layout = "_ManageLayout";
    ViewData["Title"] = "Order";
}

<h1>@ViewData["Title"] - Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderTotal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Discount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FinalTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FinalTotal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.Phone)
        </dd>
    </dl>
    
    @if(Model.OrderDetails != null)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Unit Price
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderDetails)
                {
                    <tr class="align-middle">
                        <td>
                            @item.ProductID
                        </td>
                        <td>
                            @item.Product?.Name
                        </td>
                        <td>
                            @item.Quantity
                        </td>
                        <td>
                            @item.UnitPrice
                        </td>
                        <td class="d-flex">
                            <a class="ms-auto btn btn-warning" asp-controller="OrderDetail" asp-action="Edit" asp-route-id="@item.ODID">Edit</a>
                            <a class="ms-3 btn btn-success" asp-controller="OrderDetail" asp-action="Details" asp-route-id="@item.ODID">Details</a>
                            <a class="ms-3 btn btn-danger" asp-controller="OrderDetail" asp-action="Delete" asp-route-id="@item.ODID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.OrderID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
