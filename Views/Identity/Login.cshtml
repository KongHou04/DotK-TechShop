@model LoginViewModel
@{
    Layout = "_StoreLayout";
    ViewData["Title"] = "Login";
}

<div class="my-5 d-flex justify-content-center align-items-center">
    <div class="border bg-white p-5  animation-left-to-right1" style="width: 450px; height: 528px; 
            background-image: url(/imgs/backgrounds/1.png);
            background-size: contain;">
        <div class="d-flex justify-content-center align-items-center">
            <img src="/imgs/DotK.png" style="height: 35px;" alt="">
            <div class="text-center fw-bold web-text-primary" style="font-size:49px; line-height:1; margin-top: -6px;">
                -LOGIN</div>
        </div>

        <div class="text-center mt-1 web-text-primary fw-bold" style="font-size: 13px;">You need verify for this action
        </div>

        <form class="mt-4" method="post" style="font-family: Roboto;">
            <div class="form-group mb-4">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-4 text-center" style="font-size: 13px;">
                <a asp-action="ForgotPassword">Forgot your password?</a>
            </div>
            <div class="text-center ">
                <button type="submit" class="web-btn web-btn-primary btn-block fw-bold"
                    style="width: 200px;">LOGIN</button>
            </div>
            <div class="mt-4 text-center" style="font-size: 13px;">
                Dont have an account? <a asp-action="Register">Join us</a> now!!
            </div>
        </form>
    </div>
</div>
